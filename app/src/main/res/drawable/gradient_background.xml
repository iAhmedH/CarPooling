<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- First gradient -->
    <item>
        <shape>
            <gradient
                android:startColor="#4CAF50"
                android:endColor="#2196F3"
                android:angle="135"/>
        </shape>
    </item>
    <!-- Second gradient -->
    <item android:top="2dp"> <!-- Adjust top to create the overlay effect -->
        <shape>
            <gradient
                android:startColor="#FFEB3B"
                android:endColor="#FF5722"
                android:angle="45"/>
        </shape>
    </item>
</layer-list>